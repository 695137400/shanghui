<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="@drawable/bj">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:orientation="horizontal"
		android:gravity="center"
		android:background="#47586B">

		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="wrap_content"
			android:text="工作记录"
			android:textColor="#0C2C93"
			android:textSize="28sp"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:orientation="horizontal"
		android:layout_marginTop="10dp">

		<Button
			style="?android:attr/buttonStyleSmall"
			android:layout_height="40dp"
			android:layout_width="wrap_content"
			android:layout_weight="2"
			android:text="添加"
			android:background="@drawable/shape"
			android:id="@+id/mainInsert"
			android:onClick="onInsert"
			android:textSize="16dp"
			android:layout_marginLeft="10dp"/>

		<EditText
			android:layout_height="35dp"
			android:layout_width="wrap_content"
			android:layout_weight="2"
			android:ems="10"
			android:background="@drawable/srkbjt"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:id="@+id/mainEditText"
			android:inputType="text"
			android:paddingLeft="3dp"
			android:maxLines="1"/>

		<Button
			style="?android:attr/buttonStyleSmall"
			android:layout_height="40dp"
			android:layout_width="wrap_content"
			android:layout_weight="2"
			android:text="搜索"
			android:background="@drawable/shape"
			android:id="@+id/mainSelect"
			android:onClick="onSelect"
			android:textSize="16dp"
			android:layout_marginRight="10dp"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:orientation="vertical">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:orientation="horizontal">

			<TextView
				android:layout_height="1dp"
				android:layout_width="15dp"
				android:id="@+id/tid"
				android:visibility="visible"
				android:padding="0dp"
				android:textColor="#FF0F00"
				android:layout_margin="0dp"/>

			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_width="30dp"
				android:layout_weight="3"
				android:gravity="center"
				android:textColor="#000000"
				android:textSize="18dp"
				android:padding="0dp"
				android:layout_margin="0dp"
				android:text="日期"
				android:textStyle="bold"/>

			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_width="25dp"
				android:layout_weight="1"
				android:gravity="center"
				android:textColor="#000000"
				android:textSize="18dp"
				android:padding="0dp"
				android:layout_margin="0dp"
				android:text="星期"
				android:textStyle="bold"/>

			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_weight="1"
				android:gravity="right|center"
				android:textColor="#000000"
				android:textSize="18dp"
				android:layout_width="25dp"
				android:layout_marginLeft="3dp"
				android:text="时间"
				android:textStyle="bold"/>

			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_width="40dp"
				android:layout_weight="2"
				android:gravity="center"
				android:textColor="#000000"
				android:textSize="18dp"
				android:text="性质"
				android:textStyle="bold"/>

			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_width="30dp"
				android:layout_weight="1"
				android:gravity="center"
				android:textColor="#000000"
				android:textSize="18dp"
				android:text="姓名"
				android:textStyle="bold"/>

			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_width="30dp"
				android:layout_weight="4"
				android:gravity="center"
				android:textColor="#000000"
				android:textSize="18dp"
				android:text="地址"
				android:textStyle="bold"/>

		</LinearLayout>

		<ListView
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:id="@+id/mainListView1"
			android:cacheColorHint="#00000000"
			android:layout_marginTop="5dp"/>

	</LinearLayout>

</LinearLayout>

